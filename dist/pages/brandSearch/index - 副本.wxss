.page {
  padding: 180rpx 0 0rpx;
}
.page-top {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background-color: #fff;
}
.section-search {
  border-top: solid 1rpx #ddd;
  border-bottom: solid 1rpx #eee;
  padding: 20rpx 30rpx;
}
.section-search .box {
  display: flex;
  align-items: center;
  height: 60rpx;
  positon: relative;
  background-color: #eee;
  border-radius: 60rpx;
}
.section-search .icon-search {
  width: 30rpx;
  margin: 0 10rpx 0 20rpx;
}
.section-search .searchKey {
  flex: 1;
  font-size: 28rpx;
  color: #353535;
}
.section-search .placeholder {
  color: #bbb;
  caret-color: red;
}
.section-taps {
  font-size: 28rpx;
  white-space: nowrap;
  border-bottom: solid 1rpx #eee;
  position: relative;
}
.section-taps .cont-tabs .tab {
  padding: 20rpx 30rpx;
  display: inline-block;
  position: relative;
}
.section-taps .cont-tabs .tab-jinsi {
  padding-right: 45rpx;
}
.section-taps .cont-tabs .tab-jinsi .jinsi-list {
  display: block;
  position: absolute;
  right: 0;
  top: 0;
  width: 30rpx;
  height: 100%;
}
.section-taps .cont-tabs .tab-jinsi .jinsi-list::after {
  content: '';
  display: block;
  position: absolute;
  right: 10rpx;
  top: 38rpx;
  width: 0;
  height: 0;
  border: solid 10rpx transparent;
  border-top-color: #999;
}
.section-taps .cont-tabs .tab.active {
  color: #ff9900;
  border-bottom: solid 6rpx #ff9900;
}
.section-taps .cont-tabs .tab.active .jinsi-list::after {
  border-top-color: #ff9900;
}
.section-taps .tabDropmenu {
  display: none;
  width: 100%;
  position: fixed;
  top: 184rpx;
  bottom: 0;
  font-size: 26rpx;
}
.section-taps .tabDropmenu.show {
  display: block;
}
.section-taps .tabDropmenu .mask {
  display: block;
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1;
}
.section-taps .tabDropmenu .cont {
  position: relative;
  z-index: 2;
  min-height: 90rpx;
  max-height: 600rpx;
  background-color: #fff;
}
.section-taps .tabDropmenu .cont .header {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 90rpx;
  padding: 20rpx 30rpx 0 0;
  box-sizing: border-box;
  z-index: 1;
  background-color: #fff;
}
.section-taps .tabDropmenu .cont .header .menu {
  display: inline-block;
  margin-left: 30rpx;
  background-color: #eee;
  padding: 5rpx 40rpx;
  border-radius: 6rpx;
}
.section-taps .tabDropmenu .cont .bodyer {
  display: none;
  max-height: 600rpx;
  padding: 75rpx 0 0;
  overflow: auto;
}
.section-taps .tabDropmenu .cont .bodyer.show {
  display: block;
}
.section-taps .tabDropmenu .cont .bodyer .btitle {
  padding: 10rpx 30rpx 10rpx;
  background-color: #fff;
  font-weight: bold;
}
.section-taps .tabDropmenu .cont .bodyer .item {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx 20rpx;
}
.section-taps .tabDropmenu .cont .bodyer .item text {
  width: 50%;
  padding: 10rpx 10rpx;
}
.section-taps .tabDropmenu .cont .bodyer .item-year text {
  width: 100%;
}
.section-taps .jinsiDropmenu {
  display: none;
  width: 100%;
  font-size: 28rpx;
  position: absolute;
  top: 85rpx;
}
.section-taps .jinsiDropmenu.show {
  display: block;
}
.section-taps .jinsiDropmenu .mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.section-taps .jinsiDropmenu .bodyer {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 20rpx 30rpx;
  position: relative;
  z-index: 2;
  background-color: #fff;
}
.section-taps .jinsiDropmenu .bodyer .menu {
  width: 33.3333%;
  padding: 15rpx 20rpx;
  text-align: center;
}
.section-taps .jinsiDropmenu .bodyer .menu text {
  display: block;
  padding: 8rpx 0;
  border-radius: 6rpx;
  border: solid 1rpx #ccc;
  font-size: 26rpx;
}
.section-taps .jinsiDropmenu .bodyer .menu.active text {
  border: solid 1rpx #ff9900;
  color: #ff9900;
}
.section-taps .jinsiDropmenu .footer {
  width: 100%;
  display: flex;
  font-size: 32rpx;
  background-color: #fff;
  border-top: solid 1rpx #eee;
  position: relative;
  z-index: 2;
}
.section-taps .jinsiDropmenu .footer .btn {
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #ff9900;
  color: #fff;
}
.section-taps .jinsiDropmenu .footer .btn:nth-child(1) {
  background-color: #fff;
  color: #ff9900;
}
.section-result .list {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: solid 1rpx #eee;
}
.section-result .list .left {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 150rpx;
  border: solid 1rpx #f6f6f6;
}
.section-result .list .left image {
  width: 90%;
}
.section-result .list .right {
  flex: 1;
  margin-left: 20rpx;
  font-size: 26rpx;
}
.section-result .list .right .s1 {
  display: inline-block;
  margin-left: 50rpx;
}
